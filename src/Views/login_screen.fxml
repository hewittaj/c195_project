<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
      fx:controller="Controllers.LoginScreenController">
    <children>
        <AnchorPane layoutX="200.0" layoutY="99.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <TextField fx:id="userIdTextField" layoutX="-1.0" layoutY="71.0" promptText="User ID"
                           AnchorPane.leftAnchor="20.0"/>
                <PasswordField fx:id="passwordField" layoutX="20.0" layoutY="114.0" promptText="Password"/>
                <Label fx:id="locationLabel" layoutY="185.0" prefWidth="95.0" text="User's Location:">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <Label fx:id="userLocationLabel" layoutX="95.0" layoutY="185.0" text="Label"/>
                <Button fx:id="loginButton" layoutX="71.0" layoutY="146.0" mnemonicParsing="false"
                        onAction="#loginButtonAction" text="Login"/>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="14.0" layoutY="99.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label fx:id="userIdLabel" layoutX="140.0" layoutY="76.0" text="User ID"/>
                <Label fx:id="passwordLabel" layoutX="140.0" layoutY="117.0" text="Password"/>
            </children>
        </AnchorPane>
        <Label fx:id="loginScreenTitleLabel" layoutX="76.0" layoutY="14.0" text="WGU Appointment Scheduler">
            <font>
                <Font name="System Bold" size="36.0"/>
            </font>
        </Label>
    </children>
</Pane>
