        </Label>
        <TextField fx:id="customerIDTextField" disable="true" layoutX="116.0" layoutY="179.0"/>
        <AnchorPane layoutX="105.0" layoutY="209.0" prefHeight="125.0" prefWidth="182.0">
            <children>
                <TextField fx:id="customerNameTextField" layoutX="15.0" layoutY="14.0" AnchorPane.leftAnchor="10.0"
                           AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0"/>
