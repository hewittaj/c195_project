        <Label layoutX="347.0" layoutY="310.0" text="Division Info"/>
        <Label layoutX="370.0" layoutY="278.0" text="Country"/>
        <Button fx:id="backButton" layoutX="546.0" layoutY="361.0" mnemonicParsing="false" onAction="#backButtonAction"
                text="Back"/>
        <Label layoutX="35.0" layoutY="183.0" text="Customer ID"/>
    </children>
</AnchorPane>
