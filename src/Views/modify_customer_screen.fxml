            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="Controllers.ModifyCustomerScreenController">
    <children>
        <Label layoutX="113.0" text="Modify Customer Screen" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="System Bold" size="36.0"/>
